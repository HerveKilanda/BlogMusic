{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('app_admin_categorie_show', {'id': categorie.id}) }}">detail</a>
                    <a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucune categorie trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-info"><a href="{{ path('app_admin_categorie_new') }}">Creer une nouvelle categorie</a></button>
{% endblock %}
