{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-info"><a href="{{ path('app_admin_categorie_index') }}">Retour a la liste des categories</a></button>

    <button class="btn btn-info"><a href="{{ path('app_admin_categorie_edit', {'id': categorie.id}) }}">Modifier le nom de la categorie</a></button>

    {{ include('admin_categorie/_delete_form.html.twig') }}
{% endblock %}
