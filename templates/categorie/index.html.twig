{% extends 'base.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
	<h1>Voici les categories du site</h1>


	<h2 style="color:#FFF">Nom des categories</h2>

	{% for categorie in categories %}

		<div class="espace">Categorie:
			{{ categorie.nom }}

			{# <button class="btn btn-info"><a href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Consulter la liste des articles</a></button> #}
			<a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-secondary">Consulter la liste des articles</a>
		</div>


	{% else %}
		<tr>
			<td colspan="2">Aucune categorie disponible</td>
		</tr>
	{% endfor %}


{% endblock %}
