{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.createdAt ? commentaire.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_commentaire_show', {'id': commentaire.id}) }}">Detail</a>
                    <a href="{{ path('app_admin_commentaire_edit', {'id': commentaire.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">aucun commentaire trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn btn-info"><a href="{{ path('app_admin_commentaire_new') }}">Créer un nouveau commentaire</a></button>
{% endblock %}
